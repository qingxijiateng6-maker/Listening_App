rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /materials/{materialId} {
      allow read: if true;
      allow write: if false;

      match /segments/{segmentId} {
        allow read: if true;
        allow write: if false;
      }

      match /{document=**} {
        allow read, write: if false;
      }
    }

    match /jobs/{jobId} {
      allow read, write: if false;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
