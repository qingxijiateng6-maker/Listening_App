rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isValidUserExpression() {
      return request.resource.data.keys().hasOnly(["status", "updatedAt"])
        && request.resource.data.status in ["saved", "ignored", "mastered"]
        && request.resource.data.updatedAt is timestamp;
    }

    match /materials/{materialId} {
      allow read: if true;
      allow write: if false;

      match /segments/{segmentId} {
        allow read: if true;
        allow write: if false;
      }

      match /expressions/{expressionId} {
        allow read: if true;
        allow write: if false;
      }

      match /glossary/{glossaryId} {
        allow read: if true;
        allow write: if false;
      }

      match /{document=**} {
        allow read, write: if false;
      }
    }

    match /jobs/{jobId} {
      allow read, write: if false;
    }

    match /users/{uid} {
      allow read, write: if false;

      match /expressions/{expressionId} {
        allow read: if isOwner(uid);
        allow create, update: if isOwner(uid) && isValidUserExpression();
        allow delete: if isOwner(uid);
      }

      match /{document=**} {
        allow read, write: if false;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
